{
  "name": "@hyssostech/leaflet-plugin",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf dist build",
    "clean:docs": "rimraf docs",
    "build": "npm run clean && tsc --project tsconfig.json && npm run bundle",
    "bundle": "npm run bundle:umd && npm run bundle:esm && npm run bundle:dts && npm run bundle:min",
    "bundle:umd": "rollup build/leaflet/src/leaflet.js --file dist/leaflet-bundle.js --format umd --name LeafletMap",
    "bundle:esm": "rollup build/leaflet/src/leaflet.js --file dist/leaflet-bundle.esm.js --format esm",
    "bundle:dts": "rollup build/leaflet/src/leaflet.d.ts --file dist/leaflet-bundle.d.ts --format es --plugin rollup-plugin-dts",
    "bundle:min": "terser --ecma 6 --compress --mangle --module -o dist/leaflet-bundle-min.js -- dist/leaflet-bundle.js",
    "fix:format": "prettier --config ../../.prettierrc src --write",
    "build:docs": "npm run clean:docs && typedoc --tsconfig tsconfig.json",
    "build:dev": "npm run clean && tsc --project tsconfig.json && npm run bundle:dev",
    "bundle:dev": "npm run bundle:umd:dev && npm run bundle:dts",
    "bundle:umd:dev": "rollup build/leaflet.js --file dist/leaflet-bundle-min.js --format umd --name LeafletMap",
    "publish": "npm publish",
    "prepublishOnly": "npm run build",
    "publish:dry": "npm run build && npm pack"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "rollup": "^4.57.1",
    "rollup-plugin-dts": "^6.3.0",
    "terser": "^5.46.0",
    "typedoc": "^0.28.16",
    "typescript": "^5.9.3"
  }
}
