{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es6", "dom", "dom.iterable"],
    "module": "es6",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "outDir": "/dist",
    "skipLibCheck": true  // To avoid TS2611 on azure speech compilation
  },
  "files": ["/src/**/*.ts"],
  "include": [
    "/src/**/*"
  ],
  "exclude": [
    "/dist",
    "node_modules"
  ]
}
