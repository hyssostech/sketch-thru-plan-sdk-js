{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "./dist",
    "skipLibCheck": true  // To avoid TS2611 on azure speech compilation
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./dist",
  ]
}
