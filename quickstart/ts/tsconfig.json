{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es6", "dom", "dom.iterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "outDir": "./dist",
    "skipLibCheck": true  // To avoid TS2611 on azure speech compilation
  },
  "include": [
    "./src/**/*.ts",
    "./dist",
  ],
  "exclude": [
    "node_modules"
  ]
}
