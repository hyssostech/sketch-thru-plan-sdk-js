{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": false,
    "outDir": "./dist",
    "lib": [
      "es2020", 
      "DOM"
    ],
    "skipLibCheck": true  // To avoid TS2611 on azure speech compilation
  },
  "typeRoots": [
    "./node_modules/@types",
  ],
  "types": [
      "google.maps",
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./dist",
  ]
}
