{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "inlineSources": true,
    "inlineSourceMap": false,
    "strict": false,
    "outDir": "./dist",
    "lib": [
      "es2020",
      "DOM"
    ],
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./dist"
  ]
}
